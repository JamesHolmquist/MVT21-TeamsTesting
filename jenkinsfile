pipeline {

    agent any

    parameters{
        string(name: "SPEC", defaultvalue: "cypress/integration/**", description: "Run tests")
        choice(name: "BROWSER", choices: ["chrome", "edge", "firefox"], description: "Choose your browser")
    }
    options{
        ansiColor("xterm")
    }
    tools {nodejs "nodejs"}

    stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main',
                url: 'https://github.com/JamesHolmquist/MVT21-TeamsTesting.git'
            }
        }
        stage('Run Tests') {
            steps {
                sh 'npm ci'
                sh 'chmod -R +rwx *'
                sh 'apt-get install libgtk2.0-0 libgtk-3-0 libgbm-dev libnotify-dev libgconf-2-4 libnss3 libxss1 libasound2 libxtst6 xauth xvfb'
                sh 'npx cypress run'
            }    
        }
    }
}
