pipeline {

    agent {
    // this image provides everything needed to run Cypress
    docker {
      image 'cypress/base:10'
    }
  }

    tools {nodejs "nodejs"}

    stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main',
                url: 'https://github.com/JamesHolmquist/MVT21-TeamsTesting.git'
            }
        }
        stage('Run Tests') {
            steps {
                sh 'chmod -R +rwx *'
                sh 'npm i'
                sh 'npm install cypress'
                sh 'npx cypress run'
            }    
        }
    }
}
