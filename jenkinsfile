pipeline {

    agent {
    // this image provides everything needed to run Cypress
        docker {
            image 'cypress/included:9.5.0'
        }
    
    }

    parameters{
        string(name: "SPEC", defaultValue: "cypress/integration/**", description: "Which scripts to run?")
        choice(name: "BROWSER", choices: ["chrome", "edge", "firefox"], description: "Which browser?")
    }
    
    tools {nodejs "nodejs"}

    stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main',
                url: 'https://github.com/JamesHolmquist/MVT21-TeamsTesting.git'
                sh 'chmod -R +rwx *'
<<<<<<< HEAD
                sh 'npm ci'
                //sh 'npm install cypress'
                //sh 'npm install cypress-mochawesome-reporter'
=======
                sh 'npm i'
                sh 'npm install cypress'
>>>>>>> parent of ebdf160 (Added Cypress Mocha reporter)
            }
        }
        stage('Run Tests') {
            steps {
                sh 'npx cypress run --browser ${BROWSER} --spec ${SPEC}'
            }    
        }

        }
        post{
            always{
                publishHTML([allowMissing: false, alwaysLinkToLastBuild: false, keepAll: true, reportDir: 'cypress/report', reportFiles: 'index.html', reportName: 'HTML Report', reportTitles: ''])
            }
    }
}
